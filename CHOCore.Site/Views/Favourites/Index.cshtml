@{
    ViewBag.Title = @ViewBag.Message;
    string headerText = (@ViewBag.Lang == "en") ? "Your Donor Account" : "Votre compte de donateur";
}
@section styles{
  <style>
    .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li a {
      padding:15px 20px !important;font-size:14px;
    } 
    .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li a:hover {
      text-decoration: none;
      cursor: pointer;
      background-color: #E8E8E8;
      color: #0070AE;
      font-weight: 700;
    }
    @@media screen and (max-width: 991px){
        .donor-dashboard-menu .menu-nav-wrapper {
            background-color: transparent;
            border: 1px solid rgb(221, 225, 234);
        }
        .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li {
            width: 100%;
            background-color: transparent;
            min-height: unset;
        }
        .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li+li {
            border-top: 1px solid rgb(221, 225, 234);
        }
        .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li.active {
            background-image: unset;
            background-color: transparent;
            padding-bottom: 0;
        }
        .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li.active {
            background-color: #E8E8E8;
        }
        .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li.active a span {
            color: #0070AE;
            font-weight: 700;
        }
        .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li a {
            min-height: unset;
        }
    }
    @@media screen and (max-width: 768px){
      .donor-dashboard-menu .menu-nav-wrapper {
        background-color: #fff !important;
      }
      .donor-dashboard-menu .menu-nav-wrapper ul.menu-navigation li a {
        min-height: unset;
        font-size: 14px !important;
      }
    }
</style>
}
<script>
    window.favouritesSerializedObject = @Html.Raw(@ViewBag.favouritesSerializedItems);
</script>
<div class="row">
  <div class="container" style="padding-top:40px;">
    <div class="col-md-12 donor-dashboard-title">
      <h2>@headerText</h2>
    </div>
    <div class="content row">
      <div class="main col-sm-12" role="main">
        @await Component.InvokeAsync("MainTab")
      </div>
    </div>
  </div>
  <div class="container">
    <div id="favourites_app" class="row">
    </div>
   </div>
</div>